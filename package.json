{
  "name": "ai-workflow-engine",
  "version": "0.1.0",
  "private": true,
  "description": "AI Workflow Engine with Fastify, BullMQ, and Prisma",
  "scripts": {
    "build": "pnpm -r build",
    "dev:api": "pnpm --filter @workflow/api dev",
    "dev:worker": "pnpm --filter @workflow/worker dev",
    "dev": "pnpm run '/^dev:.*/'",
    "lint": "pnpm -r lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "pnpm --filter @workflow/database generate",
    "db:migrate": "pnpm --filter @workflow/database migrate",
    "db:push": "pnpm --filter @workflow/database push",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
